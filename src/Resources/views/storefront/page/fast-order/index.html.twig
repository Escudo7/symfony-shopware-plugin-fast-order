{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}

    <div class="card-title cart-table-header">
        <div class="row cart-header-row">
            <div class="col-7 cart-header-info">
                Product code
            </div>

            <div class="cart-header-quantity ml-5">
                Quantity
            </div>
        </div>
    </div>

    <form action="{{ path('fast-order.store') }}"
          class="ml-3"
          method="post"
          data-form-csrf-handler="true">
        {% for i in range(1, 10, 1) %}
            <div class="form-group row">

                {{ sw_csrf('fast-order.store') }}

                <input type="text"
                    name="number_{{ i }}"
                    class="form-control col-md-7"
                    placeholder="{{ "checkout.addProductPlaceholder"|trans|striptags }}">

                <select name="quantity_{{ i }}" class="custom-select quantity-select form-control col-4 ml-4">
                    <option>enter product quantity...</option>
                    {% for quantity in range(1, 100, 1) %}
                        <option value="{{ quantity }}">
                            {{ quantity }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        {% endfor %}
        <div class="form-group row">
            <button class="btn btn-primary" type="submit">Order now</button>
        </div>

    </form>

{% endblock %}
